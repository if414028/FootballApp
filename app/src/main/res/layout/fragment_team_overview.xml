<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".feature.teamovw.TeamOvwFragment">

        <ImageView
                android:id="@+id/imgBadge"
                android:layout_width="120dp"
                android:layout_height="140dp"
                tools:src="@drawable/ic_launcher_background"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"/>
        <TextView
                android:id="@+id/teamName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:layout_marginTop="8dp"
                android:layout_below="@id/imgBadge"
                android:layout_centerHorizontal="true"
                android:textColor="#000000"
                android:textStyle="bold"
                tools:text="@string/team_name"/>
        <TextView
                android:id="@+id/tvStadium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/teamName"
                android:layout_centerHorizontal="true"
                android:textSize="16sp"
                android:textColor="#000000"
                tools:text="@string/team_field"/>

        <TextView
                android:id="@+id/tvFormed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvStadium"
                android:layout_centerHorizontal="true"
                android:textSize="14sp"
                android:textColor="#000000"
                tools:text="@string/team_birth"/>
        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvFormed"
                android:layout_margin="8dp"
                android:elevation="4dp"
                android:id="@+id/ovwContainer">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvFormed"
                    android:orientation="vertical"
                    android:paddingBottom="12dp">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:text="Team Overview"/>

                <View
                        android:layout_width="wrap_content"
                        android:layout_height="0.5dp"
                        android:background="#9b9898"
                        android:layout_marginRight="8dp"
                        android:layout_marginLeft="8dp"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textAlignment="center"
                        android:id="@+id/teamOverview"
                        android:textSize="13sp"
                        android:layout_marginRight="8dp"
                        android:layout_marginLeft="8dp"
                        android:textColor="#000000"
                        android:text="@string/team_overview"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>